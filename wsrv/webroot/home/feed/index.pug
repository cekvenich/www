		home-card(ref='/post/amp/', img='/post/amp/amp.jpg', headline='AMP')


	script.
		TS.onAppReady(UIinit)
		function UIinit() {
			console.log('home-card')
			TS.loadComp($('#comps'),'/_webComp/home-card.html', UICompInit)
		}

		function UICompInit() {//this does not execute yet
			var el = customElements.get('home-card')
			if(!el) // if it is not defined, define:
				customElements.define('home-card', HomeCard)// loaded w/ template

		}

