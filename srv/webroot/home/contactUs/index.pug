extends  ../../_part/_baseShellS

block head
	include ../../_part/_headerS

block top
	include ../../_part/_topS

block main
	.mui-container-fluid
		p
			br
		.mui-row
			.mui-col-md-6
				p
				p You can email us anytime and we will respond back right away. Optionaly you can include your phone #. 
			.mui-col-md-6
				.mui-panel
					form.mui-form#frm1
						legend Contact us
						.mui-textfield
							input(type='text',  name='data.email', required='')
							label eMail
						.mui-textfield
							input(type='text',  name='data.phone')
							label Phone #
						.mui-textfield
							textarea(name='data.msg', required='')
							label Message
						button.mui-btn.mui-btn--raised(type='submit')#sendBtn Send
					.mui-panel#sent.
						Email sent. If the email and phone # is correct, you should hear from us in less than a few hours. If you don't hear back, please use send us a back up email to vic(at)eml.cc (.cc, not .com) to make sure we recived the message.

	script.
		const ENDPOINT = 'https://www.masons-foundation.org/contPg/contact/'
		function init() {
			console.log('init')
			$("#sent").hide()
			$('#frm1').jsForm()
			
			$('#sendBtn').click(function(e) { 
				e.preventDefault()
				var data = JSON.stringify( $('#frm1').jsForm('get') )
				console.log(data)
				$("#sent").hide()

				fetch(ENDPOINT, {
						method: 'post'
						, headers: {
							'Content-Type': 'application/json'
						}
						, body: data
					}).then(function(response) { 
						return (response.json())
						}).then(function(value) {
							console.log('back')
							console.log(value)
							$("#frm1").jsForm("clear")
							$("#sent").show()
					}).catch(function(err) {
						console.log('error')
						console.log(err)
				})//fetch()
			})//click
		}//init

		loadjs.ready(['ready'], {// loaded setup libs
			success: function(){
				init()
			}
		})

block footer
	include ../../_part/_footerS
